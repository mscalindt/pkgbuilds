# Maintainer: Dimitar Yurukov <mscalindt@protonmail.com>

pkgname=evtest
pkgver=1.36_MS
pkgrel=1
pkgdesc="Input device event monitor and query tool."
arch=(x86_64)
url="https://github.com/mscalindt/$pkgname"
license=('GPL')
depends=(glibc)
makedepends=(asciidoc xmlto)
source=("$url/archive/refs/tags/$pkgname-${pkgver//_/-}.tar.gz")
ILOVEMAKEPKG="$pkgname-$pkgname-${pkgver//_/-}"
sha256sums=('63f674a30c3f4b3c3935f5c07f873412fb0553abd1920774febfef33f36c5a70')

build() {
  cd "$ILOVEMAKEPKG"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$ILOVEMAKEPKG"
  make DESTDIR="$pkgdir" install
}
